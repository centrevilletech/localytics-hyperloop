<Alloy>
	<TabGroup title="Localytics-Hyperloop Test App">
		<Tab title="General">
			<Window id="generalTabWindow" title="General">
				<ScrollView id="generalTabScrollContainerView">
					<Button title="Tag Event" id="tagEventBtn" onClick="doTagEventBtnClick" />
					<Button title="Tag Screen" id="tagScreenBtn" onClick="doTagScreenBtnClick" />
					<Button title="Set Profile Attribute" id="setProfileAttributeBtn" onClick="doSetProfileBtnClick" />
					<Button title="Set Customer Id" class="testBtns" onClick="doSetCustomerIdBtnClick" />
					<Button title="Set First Name" class="testBtns" onClick="doSetFirstNameBtnClick" />
					<Button title="Set Last Name" class="testBtns" onClick="doSetLastNameBtnClick" />
					<Button title="Set Full Name" class="testBtns" onClick="doSetFullNameBtnClick" />
					<Button title="Set Email Address" class="testBtns" onClick="doSetEmailAddressBtnClick" />
				</ScrollView>
			</Window>
		</Tab>
		<Tab title="App Inbox">
			<Window id="appInboxTabWindow" title="App Inbox">
				<View id="appInboxContainerView" />
				<View id="appInboxControlBoxView">
					<Button title="Reload Inbox (Android)" id="reloadInboxBtn" onClick="doReloadInboxBtnClick" />
				</View>
			</Window>
		</Tab>
		<Tab title="Misc">
			<Window id="miscTabWindow" title="Misc">
				<ScrollView id="miscTabScrollContainerView">
					<Button title="Upload" id="uploadBtn" onClick="doUploadBtnClick" />
					<Button title="Start AppInbox BG Service (iOS Only)" id="startBGServiceBtn" onClick="doStartAppInboxBackgroundServiceBtnClick" />
					<Button title="Stop AppInbox BG Service (iOS Only)" id="stopBGServiceBtn" onClick="doStopAppInboxBackgroundServiceBtnClick" />
				</ScrollView>
			</Window>
		</Tab>
	</TabGroup>
</Alloy>